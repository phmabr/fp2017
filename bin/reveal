#!/bin/sh

md=`echo $1*.md`
html=`echo "$md" | sed s/md/html/`

cmd() {
  echo $*
  $*
}

if [ "$md" == "00-index.md" ]; then
  cmd pandoc --to html --standalone --output docs/index.html $md
else
  cmd pandoc --to revealjs \
    -V revealjs-url=lib/reveal.js-3.5.0 \
    -V theme=solarized \
    --standalone --output docs/$html \
    $md
fi
